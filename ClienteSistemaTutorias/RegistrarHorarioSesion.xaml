<Window x:Class="ClienteSistemaTutorias.RegistrarHorarioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteSistemaTutorias"
        mc:Ignorable="d"
        Title="RegistrarHorarioSesion" Height="450" Width="800">
    <Grid Background="#bdd1de">
        <ComboBox x:Name="cbSesion" DisplayMemberPath="numeroSesion" SelectedValuePath="idTutoriaAcademica" HorizontalAlignment="Left" Margin="90,280,0,0" VerticalAlignment="Top" Width="120" />
        <ComboBox x:Name="cmbTime" HorizontalAlignment="Left" Margin="568,280,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Asignar" HorizontalAlignment="Center" Margin="0,336,0,0" VerticalAlignment="Top" Click="clickBtnAsignar"/>
        <Button Content="Cancelar" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" Click="clickBtnCancelar"/>
        <Label Content="Nombre tutorado:" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontFamily="Verdana" FontSize="16"/>
        <Label x:Name="lblNombreTutorado" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,39,0,0" Foreground="White" FontFamily="Verdana" FontSize="16"/>
        <Label x:Name="lblApellidoPaternoTutorado" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" Foreground="White" FontFamily="Verdana" FontSize="16"/>
        <Label x:Name="lblApellidoMaternoTutorado" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Foreground="White" FontFamily="Verdana" FontSize="16"/>
        <Label Content="Selecciona la sesión" HorizontalAlignment="Left" Margin="90,222,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Selecciona la hora" HorizontalAlignment="Left" Margin="575,222,0,0" VerticalAlignment="Top" Foreground="White" Width="113"/>

    </Grid>
</Window>
